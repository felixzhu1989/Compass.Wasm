@page "/update/uvihw/{Id}"
@using Compass.Wasm.Shared.DataService.Hoods
@inject HttpClient Http
@if (_uviHwData != null)
{
    <ShowPdfDrawings Id="@Id"/>
    <p>@_uviHwData.ToString()</p>
    <EditForm Model="_uviHwData" OnSubmit="Save">
        
        

    </EditForm>
}

@code {
    [Parameter]
    public string Id { get; set; }
    private UviHwData? _uviHwData;
    protected override async Task OnParametersSetAsync()
    {
        _uviHwData = await Http.GetFromJsonAsync<UviHwData>($"api/Data/{Id}");
        if (_uviHwData!=null) _uviHwData.ChangeId(Guid.Parse(Id));
    }

    Task Save()
    {
        return Task.CompletedTask;
    }
}
