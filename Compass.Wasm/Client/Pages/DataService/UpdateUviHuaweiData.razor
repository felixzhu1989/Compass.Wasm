@page "/update/uvi-huawei/{Id}"
@using Compass.Wasm.Shared.DataService.Hoods
@inject HttpClient Http
@if (_uviHuaweiData != null)
{
    <ShowPdfDrawings Id="@Id"/>
    <p>@_uviHuaweiData.ToString()</p>
    <EditForm Model="_uviHuaweiData" OnSubmit="Save">
        
        

    </EditForm>
}

@code {
    [Parameter]
    public string Id { get; set; }
    private UviHuaweiData? _uviHuaweiData;
    protected override async Task OnParametersSetAsync()
    {
        _uviHuaweiData = await Http.GetFromJsonAsync<UviHuaweiData>($"api/Data/{Id}");
        if (_uviHuaweiData!=null) _uviHuaweiData.ChangeId(Guid.Parse(Id));
    }

    Task Save()
    {
        return Task.CompletedTask;
    }
}
