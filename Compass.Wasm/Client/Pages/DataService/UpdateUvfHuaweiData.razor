@page "/update/uvfhw/{Id}"
@using Compass.Wasm.Shared.DataService.Hoods
@inject HttpClient Http
@if (_uvfHwData != null)
{
    <ShowPdfDrawings Id="@Id"/>
    <p>@_uvfHwData.ToString()</p>
    <EditForm Model="_uvfHwData" OnSubmit="Save">
        
        

    </EditForm>
}

@code {
    [Parameter]
    public string Id { get; set; }
    private UvfHwData? _uvfHwData;
    protected override async Task OnParametersSetAsync()
    {
        _uvfHwData = await Http.GetFromJsonAsync<UvfHwData>($"api/Data/{Id}");
        if (_uvfHwData!=null) _uvfHwData.ChangeId(Guid.Parse(Id));
    }

    Task Save()
    {
        return Task.CompletedTask;
    }
}
