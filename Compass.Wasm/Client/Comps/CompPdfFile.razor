@if (!string.IsNullOrWhiteSpace(PdfUrl))
{
    <a href="@PdfUrl" target="_blank">
        <span class="oi oi-paperclip me-2">PDF</span>
    </a>
}
else
{
    <a href="@UploadUrl">
        <span class="oi oi-cloud-upload">上传</span>
    </a>
}
@code {
    [Parameter]
    public string PdfUrl { get; set; }
    [Parameter]
    public string UploadUrl { get; set; }
}
